@model ForumIndexViewModel

@{
    ViewData["Title"] = "Forum List";
}

<h2>Index</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var forum in Model.ForumList)
        { 
        <tr>
            <td>
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
                 @forum.Name
                </a>
            </td>
            <td>@forum.Description</td>
        </tr>
        }
    </tbody>
</table>

